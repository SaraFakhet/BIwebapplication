{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Documentation for the API",
        "description": "Documentation of the API for the different feature"
    },
    "servers": [
        {
            "url": "/",
            "description": "Local Dev"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Regroup the feature about user"
        }

    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/userAuthentification": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Authentification for User Account",
                "parameters": [
                    {
                      "name": "login",
                      "in": "body",
                      "description": "Login of the user",
                      "example": "henry.martin",
                      "required": true,
                      "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "body",
                        "description": "Password of the user",
                        "example": "12345",
                        "required": true,
                        "type": "string"
                      }
                ],
                 "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not found, No good information receive"
                    },
                    "400": {
                        "description": "Bad Request, Need pasword or login in the request query"
                    },
                    "500": {
                        "description": "Internal Error, cannot connect to the db"
                    }
                }
            }
        },
        "/createUser": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create User Account",
                "parameters": [
                    {
                        "name": "user_information",
                        "in": "body",
                        "description": "All information about the user",
                        "schema": {
                          "$ref": "#/definitions/UserInformation"
                         }
                    },
                    {
                        "name": "password",
                        "in": "body",
                        "description": "Password of the user",
                        "type": "string",
                        "example": "12345"
                    }
                ],
                 "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not found, No good information receive"
                    },
                    "400": {
                        "description": "Bad Request, Need  information about the user in body"
                    },
                    "500": {
                        "description": "Internal Error, cannot connect to the db"
                    }
                }
            }
        },
        "/getUserInformation": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get all information about one User",
                "parameters": [
                    {
                      "name": "user_id",
                      "in": "query",
                      "description": "user_id for identified the user",
                      "example": "toto-id",
                      "required": true,
                      "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                 "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/UserInformation"
                        }
                    },
                    "404": {
                        "description": "Not found, User not found with this id"
                    },
                    "400": {
                        "description": "Bad Request, Need user_id in the request query"
                    },
                    "500": {
                        "description": "Internal Error, cannot connect to the db"
                    }
                }
            }
        },
        "/modifUserInformation": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Modifie information about one user",
                "parameters": [
                    {
                      "name": "user_information",
                      "in": "body",
                      "description": "All information about one user",
                      "schema": {
                        "$ref": "#/definitions/UserInformation"
                       }
                    }

                ],
                "produces": [
                    "application/json"
                ],
                 "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not found, User not found with this information"
                    },
                    "400": {
                        "description": "Bad Request, Need information_user in the request body"
                    },
                    "500": {
                        "description": "Internal Error, cannot connect to the db"
                    }
                }
            }
        }
    },
    "definitions": {
        "UserInformation": {
            "type": "object",
            "properties": {
                "first_name": {
                    "type": "string",
                    "example": "Henry"
                },
                "last_name": {
                    "type": "string",
                    "example": "Martin"
                },
                "email": {
                    "type": "string",
                    "example": "henry.martin@epita.fr"
                },
                "picture": {
                    "type": "string",
                    "example": "photo.png"
                },
                "user_id": {
                    "type": "string",
                    "example": "user_id"
                },
                "status": {
                    "type": "string",
                    "example": "Disponnible"
                } 
            }
        }
    }
}